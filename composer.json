{
  "name": "bermudaphp/duration",
  "description": "An immutable PHP library for handling time durations with ISO 8601 support",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "php",
    "php84",
    "duration",
    "iso8601",
    "iso8601-duration",
    "immutable",
    "value-object",
    "duration-parser"
  ],
  "require": {
    "php": "^8.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
  },
  "autoload": {
    "psr-4": {
      "Bermuda\\Stdlib\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bermuda\\Stdlib\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  }
}
